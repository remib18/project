{% extends 'layout.html.twig' %}

{% block title %}Mes cours{% endblock %}

{% block content %}
    <div class="p-6 max-w-6xl mx-auto">
        <div class="flex items-center gap-3 mb-6">
            <!-- Texte "Liste de mes cours" -->
            <h1 class="text-2xl font-bold flex-shrink-0">Liste de mes cours</h1>
            <!-- Barre de recherche -->
            <label>
                <input type="text" placeholder="Recherche..." class="border rounded-md px-3 py-2 flex-grow shadow-sm">
            </label>
            <!-- Boutons de catÃ©gorie -->
            <div class="flex gap-3 ml-4 flex-shrink-0">
                <button class="bg-[#37A0C9] hover:bg-[#2e8cb3] text-white text-sm px-4 py-1 rounded-full">Category 1</button>
                <button class="bg-[#37A0C9] hover:bg-[#2e8cb3] text-white text-sm px-4 py-1 rounded-full">Category 2</button>
                <button class="bg-[#37A0C9] hover:bg-[#2e8cb3] text-white text-sm px-4 py-1 rounded-full">Category 3</button>
                <button class="bg-[#37A0C9] hover:bg-[#2e8cb3] text-white text-sm px-4 py-1 rounded-full">Tous</button>
            </div>
        </div>

    <!-- Favoris -->
        {% set favoriteCourses = courses|filter(course => course.isFavorite) %}
            <h2 class="font-semibold text-lg mb-2">Favoris</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 mb-6">
                {% for course in favoriteCourses %}
                    <a href="{{ course.link }}" class="rounded-xl shadow hover:shadow-md transition overflow-hidden">
                        <img src="{{ course.image }}" alt="{{ course.name }}" class="w-full h-32 object-cover">
                        <div class="p-4">
                            <h3 class="font-semibold text-sm">{{ course.name }}</h3>
                            <p class="text-gray-500 text-sm">{{ course.description }}</p>
                        </div>
                    </a>
                {% endfor %}
            </div>

        <!-- Tous les cours -->
        <h2 class="font-semibold text-lg mb-2">Tous mes cours</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
            {% for course in courses %}
                <a href="{{ course.link }}" class="bg-white rounded-xl shadow hover:shadow-md transition overflow-hidden">
                    <img src="{{ course.image }}" alt="{{ course.name }}" class="w-full h-32 object-cover">
                    <div class="p-4">
                        <h3 class="font-semibold text-sm">{{ course.name }}</h3>
                        <p class="text-gray-500 text-sm">{{ course.description }}</p>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}
